<h1 align="center">Article List</h1>
<hr>
<table border="5" align="center">
	<tr>
		<th>Article title</th>
		<th>Author</th>
		<th>Description</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>
	<% @article.each do |article| %>
	<tr>
		<td>		<%= link_to "#{article.title}" , article_path(article.id) %></td>
		<td>		<%= article.author %></td>
		<td>		<%= article.description %></td>
		<td>		<%= link_to "edit" , edit_article_path(article.id) %></td>
		<td>		<%= link_to "delete" , article_path(article.id) , method: :delete , data: {confirm: "Are you sure to delete this article? "} %></td>
	</tr>
	<% end %>
</table>

