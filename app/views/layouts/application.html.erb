<!DOCTYPE html>
<html>
<head>
  <title>MyBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
	<body>
		<nav class="navbar navbar-default">
			<div class="container">
				<div class="navbar-header">
					<%= link_to "Dylan's Blog" , articles_path , class: "navbar-brand" %>	
				</div>

				<ul class="nav navbar-nav navbar-right">
					<li>
								<%= link_to "Sign Up" , new_user_registration_path %>
					</li>
					<% if user_signed_in? %>
						<li>
							<%= link_to "Sign Out" , destroy_user_session_path, method: :delete %>
						</li>
					<% else %>
						<li>
								<%= link_to "Log in" , new_user_session_path %>
						</li>
					<% end  %>
					
				</ul>
				<ul class="nav navbar-nav">
						<% if user_signed_in? %>
							<li>
										<%= link_to "Add articles" , new_article_path %>
							</li>
						<% end %>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> Category <span class="caret"></span>	
						</a>
						<ul class="dropdown-menu" role="menu">
							<% Category.all.each do |cate| %>
								<li>
									<%= link_to cate.name , articles_path(category: cate.name) , class: "link" %>
								</li>
							<% end %>
						</ul>
					</li>
					
				</ul>	
			</div>
		</nav>

		<p class="notice"> <b><%= notice %></b></p>
	    <p class="alert"> <b><%= alert %></b></p>

	    <!-- <%= render 'shared/jumbotron' %> -->

	   
	      <!-- Main jumbotron for a primary marketing message or call to action -->
	      <div class="container">
	      	<%= yield %>
	      </div> 
	    

	    <%= render 'shared/footer' %>

	</body>
</html>
